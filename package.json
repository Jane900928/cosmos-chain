{
  "name": "cosmos-blockchain-app",
  "version": "1.0.0",
  "description": "A simple blockchain application using CosmJS and Express",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test/api-test.js",
    "test:watch": "nodemon test/api-test.js",
    "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh install",
    "start:full": "chmod +x scripts/setup.sh && ./scripts/setup.sh start",
    "stop": "chmod +x scripts/setup.sh && ./scripts/setup.sh stop",
    "status": "chmod +x scripts/setup.sh && ./scripts/setup.sh status",
    "docker:build": "docker build -t cosmos-blockchain-app .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "clean": "rm -rf data/*.json && rm -f cosmos-chain.log cosmos-chain.pid"
  },
  "dependencies": {
    "@cosmjs/amino": "^0.31.3",
    "@cosmjs/crypto": "^0.31.3",
    "@cosmjs/encoding": "^0.31.3",
    "@cosmjs/math": "^0.31.3",
    "@cosmjs/proto-signing": "^0.31.3",
    "@cosmjs/stargate": "^0.31.3",
    "@cosmjs/tendermint-rpc": "^0.31.3",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "fs-extra": "^11.1.1",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "cosmos",
    "blockchain",
    "cosmjs",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT"
}